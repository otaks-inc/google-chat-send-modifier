{
  "manifest_version": 3,
  "name": "エンタァアーーーー嫌ァーーーーー",
  "description": "Enter で改行、Shift/Ctrl/⌘ + Enter で送信。",
  "version": "1.2.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Google Chat Enter Key Modifier"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.google.com/*",
        "https://mail.google.com/chat/*"
      ],
      "js": ["content-script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ]
}
